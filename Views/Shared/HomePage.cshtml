<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link rel="stylesheet" href="~/LayoutDesign.css" type="text/css"/>*@
    @*<script src="~/Validation.js"/>*@
    <link rel="stylesheet" href="~/LayoutStyle.css" type="text/css" />
</head>
<body style="align-content:center">
    <header style="align-content:center">
        <h1>Online Car Parking Booking</h1>
        <h3><i>Park Before You Arrive</i></h3>
        @Html.ActionLink("Home", "Home")
       @* @Html.ActionLink("Sign In", "SignIn")*@
        @Html.ActionLink("Sign Up", "SignUp")
        @if (HttpContext.Current.User.IsInRole("Admin"))
        {
            <span> @Html.ActionLink("Display Details", "DisplayParkingSiteDetails")</span>
        }
        @if (HttpContext.Current.User.IsInRole("User"))
        {
             <span>@Html.ActionLink("Display Details", "DisplayDetailsToCustomer","ParkingSite")</span>
        }
        @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <span> @Html.ActionLink("Logout", "LogOut", "CarOwnerDetails", null, new { @class = "menu" }) </span>
        }
        else
        {
            <span> @Html.ActionLink("Sign In", "SignIn", "CarOwnerDetails", null, new { @class = "menu" }) </span>
        }

    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>


